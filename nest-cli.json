{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "watchAssets": true,
  "assets": ["**/*.hbs", "**/*.handlebars"],
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "generated/prisma/client/**/*.{js,d.ts}",
        "outDir": "dist"
      }
    ]
  }
}
