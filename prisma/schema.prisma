generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma/client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Post {
  id            String    @id
  title         String
  excerpt       String?
  content       String
  date          DateTime  @default(now())
  lastModified  DateTime  @default(now())
  status        Int       @default(1)  // unpublished
  deleted       Boolean   @default(false)
}